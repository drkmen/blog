<div class="wrapper about">
    <h2 id="skills">Skills</h2>
    <div class="skills">
        {{#each skill in model.skills}}
            <div class="skill">
                {{#view 'pieChart' data-percent=skill.value name=skill.name}}
                    <span class="h2 step font-bold">{{skill.name}}</span>
                    <div class="easypie-text text-muted">More than {{skill.years}} years</div>
                    <!--<div class="font-bold m-t">{{!skill.name}}</div>-->
                {{/view}}
                <br>
                <div class="skill-level">{{skill.level}}</div>
            </div>
        {{/each}}
    </div>

    <br>
    <br>

    <h2 id="portfolio">Portfolio</h2>
    <div class="projects">
        {{#each project in model.projects}}
            <div class="project">
                {{partial 'about/project'}}
            </div>
        {{/each}}
    </div>
    <h2 id="contacts">Contacts</h2>

