<div class="post-preview index" {{bind-attr style=post.PPbackground}}>

</div>
<div class="post-index">
    {{#link-to 'posts.show' post.id}}<span class="title">{{post.title}}</span>{{/link-to}}
    <br>
    <p></p>
    <span class="date">
        {{date post.created_at}}
        by
        <span class="author">
            {{#link-to 'author.show' post.author.name}}
                {{post.author.name}}
            {{/link-to}}
        </span>
    </span>

    <p></p>
    <span class="body">{{truncate post.body 200}}</span>
    <p></p>
    <br>
    {{#link-to 'posts.show' post.id class='post-preview-button'}}Read more{{/link-to}}
</div>