      <li><h4>{{#link-to 'about'}}ABOUT{{/link-to}}</h4></li>
      <li><a href="#" {{action 'goToLink' 'about' '#skills'}}>Skills</a></li>
      <li><a href="#" {{action 'goToLink' 'about' '#experience'}}>Education</a></li>
      <li><a href="#" {{action 'goToLink' 'about' '#experience'}}>Experience</a></li>
      <li><a href="#" {{action 'goToLink' 'about' '#portfolio'}}>Portfolio</a></li>
      <li><a href="#" {{action 'goToLink' 'about' '#contacts'}}>Contacts</a></li>

      <li><h4>{{#link-to 'terms'}}TERMS{{/link-to}}</h4></li>
